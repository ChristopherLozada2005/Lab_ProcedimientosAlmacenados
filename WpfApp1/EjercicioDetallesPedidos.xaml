<Window x:Class="WpfApp1.EjercicioDetallesPedidos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="EjercicioDetallesPedidos" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <!-- Filtros -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Desde:" Width="50"/>
                <DatePicker x:Name="dpInicio" Width="150" Margin="0,0,20,0"/>
                <Label Content="Hasta:" Width="50"/>
                <DatePicker x:Name="dpFin" Width="150" Margin="0,0,20,0"/>
                <Button Content="Buscar" Width="100" Click="btnBuscar_Click"/>
            </StackPanel>

            <DataGrid x:Name="dgDetallesPedidos"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      Height="400"/>
        </StackPanel>
    </Grid>
</Window>
