<Window x:Class="WpfApp1.Ejercicio9"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Ejercicio9" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Nombre Contacto:" Width="120"/>
                <TextBox x:Name="txtNombreContacto" Width="200" Margin="0,0,20,0"/>
                <Label Content="Ciudad:" Width="60"/>
                <TextBox x:Name="txtCiudad" Width="200"/>
                <Button x:Name="btnBuscar" Content="Buscar" Width="100" Margin="20,0,0,0" Click="btnBuscar_Click"/>
            </StackPanel>

            <DataGrid x:Name="dgProveedores"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      Height="380"/>
        </StackPanel>
    </Grid>
</Window>
